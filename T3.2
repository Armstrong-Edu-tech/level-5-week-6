import React, { useState } from "react";
import "./App.css";

function UserName() {
  const [name, setName] = useState("");
  return (
    <div className="user-card">
      <p>User name is: {name}</p>
      <button onClick={() => setName("Alice")}>Set Name to Alice</button>
    </div>
  );
}

function App() {
  return (
    <div>
      <UserName />
    </div>
  );
}

export default App;
